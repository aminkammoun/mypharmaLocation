<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pharmacie.io" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>myPharmaLocation</name>
    <platform name="android">
    <icon src="./www/img/istockphoto-1208199298-170x170.jpg"></icon>
    <!-- <splash src="www/img/splash.png" ></splash> -->
    </platform>
    <preference name="SplashScreen" src="www/img/splash.png">      
    </preference>
    <preference name="SplashScreenBackgroundColor" value="#2bb673">      
    </preference>
    <preference name="SplashScreenDelay" value="3000">
    </preference>
    <preference name="StatusBarBackgroundColor" value="#2bb673" />
    
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="Aminekammoun55@gmail.com" href="http://cordova.io">
        Amine Kammoun
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
